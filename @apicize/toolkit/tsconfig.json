{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "esnext",
    "lib": ["dom", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": true,
  },
  "exclude": ["./dist", "test", "release/build", "release/app/dist", ".erb/dll", "node_modules"]
}
