{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Rust CLI",
      "program": "${workspaceFolder}/@apicize/cli/target/debug/apicize_cli",
      "preLaunchTask": "rust: build cli",
      "args": [
        "/home/jterando/.local/share/apicize/test1.json"
      ],
      "cwd": "${workspaceFolder}/@apicize/cli",
      "stopOnEntry": false,
      "internalConsoleOptions": "openOnSessionStart",
      "terminal": "console"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Tauri App (Development)",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=${workspaceFolder}/@apicize/app/src-tauri/Cargo.toml",
          "--no-default-features"
        ]
      },
      // task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
      "preLaunchTask": "ui:dev",
      "stopOnEntry": false
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Tauri App (Production)",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=${workspaceFolder}/@apicize/app/src-tauri/Cargo.toml",
          "--release"
        ]
      },
      // task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
      "preLaunchTask": "ui:build",
      "stopOnEntry": false
    },
  ]
}