    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Rust CLI",
            "program": "${workspaceFolder}/@apicize/rust/cli/target/debug/apicize_cli",
            "preLaunchTask": "rust: build cli",
            "args": [
                "/home/jterando/.local/share/apicize/test-fail.json"
            ],
            "cwd": "${workspaceFolder}/@apicize/rust/cli",
            "terminal": "integrated"

        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Tauri Development Debug",
            "cargo": {
              "args": [
                "build",
                "--manifest-path=${workspaceFolder}/@apicize/app/src-tauri/Cargo.toml",
                "--no-default-features"
              ]
            },
            // task for the `beforeDevCommand` if used, must be configured in `.vscode/tasks.json`
            "preLaunchTask": "ui:dev"
          },        
    ]
}